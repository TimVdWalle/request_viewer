# Ignore bundler config
/.bundle

# Logs and tempfiles
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore PID files, cache, and sockets
/tmp/pids/*
/tmp/cache/*
/tmp/sockets/*

# Byebug / Pry history
.byebug_history
.pry_history

# Ignore master key and credentials
/config/master.key
/config/credentials/*.key

# Environment variables
.env
.env.*

# Node modules and Yarn/NPM artifacts
/node_modules
/yarn-error.log
/package-lock.json
pnpm-lock.yaml

# Tailwind + JS builds
/app/assets/builds/*
!/app/assets/builds/.keep

# Precompiled assets
/public/assets
/public/packs
/public/packs-test

# Uploaded files in development
/storage/*
!/storage/.keep

# Coverage reports
/coverage

# System test screenshots
/tmp/screenshots/*

# SQLite (local dev/test DB)
/db/*.sqlite3
/db/*.sqlite3-*

# Capybara artifacts
/capybara-*.html

# IDE/editor junk
.idea
.vscode
*.swp
*~
